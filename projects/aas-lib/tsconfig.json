{
    "extends": "../../tsconfig.json",
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "moduleResolution": "bundler",
        "module": "ES2022",
        "declaration": false,
        "importHelpers": true,
        "lib": [
            "ES2022",
            "dom"
        ],
        "types": [
            "@angular/localize",
            "jasmine"
        ]
    },
    "angularCompilerOptions": {
        "enableI18nLegacyMessageIdFormat": false,
        "strictInjectionParameters": true,
        "strictInputAccessModifiers": true,
        "strictTemplates": true
    }
}